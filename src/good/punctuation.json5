{
  "repository": {
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.type.snowball",
          "match": ":\\s+?(?=(&|bool|char|usize|isize|u8|u16|u32|u64|u128|i8|i16|i32|i64|i128|f32|f64|str|Self|String|Vector))"
        },
        {
          "name": "punctuation.terminator.snowball",
          "match": ";"
        },
        {
          "name": "punctuation.other.comma.snowball",
          "match": ","
        },
        // {
        //   "name": "punctuation.other.curly.snowball",
        //   "match": "[{}]"
        // },
        {
          "name": "punctuation.other.paren.snowball",
          "match": "[)(]"
        },
      ]
    }
  }
}
